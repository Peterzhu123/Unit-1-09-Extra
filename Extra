import Foundation
var sum = 0
var count = 0
var number = 6
var array = [[(Int)]]()

for row in 0 ... 3 {
    array.append([Int]())

for rand in 0 ... number {
    array[row].append(Int(arc4random_uniform(100)))
    count+=1
    sum = array.joined().reduce(0, +)
    }
}
print ("\(array)")
print ("The sum is \(sum)")
var final = sum/count
print("The average is : \(final)")

